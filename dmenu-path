CACHE="${XDG_CACHE_HOME:-"$HOME/.cache"}"
test -d "$CACHE/dmenu" || mkdir -p "$CACHE/dmenu"
CACHE+="/dmenu/dmenu-cache"

IFS=:

uptodate() {
    test -f "$CACHE" &&
    for dir in $PATH
    do
        test ! $dir -nt "$CACHE" || return 1
    done
}

if ! uptodate
then
    for dir in $PATH
    do
        cd "$dir" &&
        for file in *
        do
            test -x "$file" && echo "$file"
        done
    done | sort | uniq > "$CACHE".$$ &&
    mv "$CACHE".$$ "$CACHE"
fi

cat "$CACHE"
