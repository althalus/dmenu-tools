# Global variables:
CANONICAL="$(readlink -f "$0")"
TERMINAL="urxvtc"
FILES="$HOME/.config/dmenu-tools/edit-list"

# Imports:
. "$(dirname "$CANONICAL")/lib/isSet.sh"

tty -s || "$TERMINAL" -T "$(basename "$CANONICAL")" -e "$CANONICAL"

choice="$(tty -s && dmenu < "$FILES")"
if [[ $choice ]]; then
    isSet "EDITOR" "Editor: "
    $EDITOR $(eval "echo $choice")  # Expand tilde XXX: can it be done w/o eval?
fi
